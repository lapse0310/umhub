<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/courseDescription"
        android:layout_width="500dp"
        android:layout_height="298dp"
        android:layout_marginTop="40dp"
        android:text="Course Review overview here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="500dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="COURSENAME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/reviewListView"
        android:layout_width="500dp"
        android:layout_height="412dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/writeReviewButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseDescription">

    </ListView>

    <Button
        android:id="@+id/writeReviewButton"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:onClick="buttonWriteCourseReviewOnClick"
        android:text="WRITE A REVIEW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewTutors"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginBottom="75dp"
        android:onClick="buttonViewTutors"
        android:text="TUTORS FOR THIS COURSE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
